<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentStandings"
    android:background="#181928"
    android:id="@+id/fragStangding"
    >


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Standings"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold"
                android:padding="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="585dp"
                android:orientation="vertical"
                android:background="@drawable/radius_tablestandings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Table Standings"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSeeAllStandingTable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="See All"
                        android:textColor="#D2B5FF"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Club"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="62.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="W"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="63.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="D"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="61.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="L"
                        android:textSize="20dp"

                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="62.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Point"

                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/lvTableStangdings"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#d2cbcb"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="654dp"
                android:orientation="vertical"
                android:background="@drawable/radius_tablestandings">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Table Standings"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAllTopScoresPlayer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="See All"
                        android:textColor="#D2B5FF"
                        android:textSize="20dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="Player Name" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.015"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Goals"
                        />
                </LinearLayout>

                <ListView
                    android:id="@+id/lvTopScorers"
                    android:layout_width="wrap_content"
                    android:layout_height="560dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#d2cbcb"
                    />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>