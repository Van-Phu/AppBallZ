<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FragmentTableStandingFull"
    android:background="#181928"
    >

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgBTableStanding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back_30"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Table Standings"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Club"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="69.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="W"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="D"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="L"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="62.5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Point"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>
                <ListView
                    android:id="@+id/lvTableStangdings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
</FrameLayout>